<Window x:Class="Calculator2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator2"
        mc:Ignorable="d"
        Title="Calculator" Height="500" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label x:Name="lbl1" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center">Operand 1:</Label>
        <Label x:Name="lbl2" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">Operand 2:</Label>
        <Button x:Name="btnAdd" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Padding="40, 5" Click="Button_Click">Add</Button>
        <Label x:Name="lblAnsw" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="3">Answer:</Label>
        <CheckBox x:Name="cbxCenter" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="4" Grid.ColumnSpan="2" Checked="CheckBox_Checked" FontStyle="Italic" >Center Numeric Values</CheckBox>

        <TextBox x:Name="txt1" FontSize="25" TextAlignment="Center" Grid.Column="1" Margin="30, 27"></TextBox>
        <TextBox x:Name="txt2" FontSize="25" TextAlignment="Center" Grid.Column="1" Grid.Row="1" Margin="30, 27"></TextBox>
        <Button x:Name="btnSub" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" Padding="20, 5">Subtract</Button>
        <TextBox x:Name="txtAnsw" FontSize="25" TextAlignment="Center" Grid.Column="1" Grid.Row="3" Margin="30, 27"></TextBox>

    </Grid>
</Window>
